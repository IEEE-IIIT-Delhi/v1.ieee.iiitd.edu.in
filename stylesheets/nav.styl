nav
	width: 100%
	max-width: 1500px
	margin: 0 auto
	padding: 2vh 0 1vh 0
	transition: 0.1s opacity linear
	display: flex
	justify-content: space-between
	flex-wrap: wrap

	a.nav__name
		display: flex
		margin: 0 calc(2vh - 10px)

		img
			height: 60px
			vertical-align: text-top
			margin-right: 10px

	ul
		display: flex
		overflow-x: auto
		padding: 10px 2vh

		li
			list-style-type: none
			&:first-child a
				margin-left: 0

	a
		display: flex
		justify-content: center
		align-items: center
		margin: 5px 10px
		padding: 5px 10px
		font-size: 18px
		white-space: nowrap
		font-family: Manrope Bold
		color: var(--accent-color-9)
