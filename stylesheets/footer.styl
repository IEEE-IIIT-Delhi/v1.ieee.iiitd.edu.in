footer
	background: var(--accent-color-0)
	width: 100%
	height: 100%
	padding: 5vh 0

	.content
		margin: 0 auto
		width: 90%
		max-width: 1000px

	h1
		font-size: 36px
		color: var(--accent-color-9)
		font-family: Manrope Extra Bold
		margin-bottom: 20px

	h2
		font-size: 26px
		color: #444444
		font-family: Manrope Bold

	.cols-2
		display: flex
		flex-wrap: wrap

	.address, .find
		margin: 50px 0
		min-width: 300px
		flex: 1

		h3
			font-size: 22px
			color: var(--accent-color-7)
			padding: 10px 0
			font-family: Manrope Bold

		p
			font-size: 18px
			max-width: 500px
			line-height: 1.7
			color: #222

		.networks
			margin: 0 -5px

			a
				display: inline-flex
				justify-content: center
				align-items: center
				margin: 10px 5px
				padding: 5px 10px
				font-family: Manrope Semibold
				font-size: 20px
				color: #333

				img
					height: 25px
					margin-right: 5px
