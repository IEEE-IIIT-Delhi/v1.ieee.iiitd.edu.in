- const {navigation} = htmlWebpackPlugin.options;

mixin nav(active=false)
	nav
		.container
			a.nav__name(href="/")
				img(src="/assets/img/logo.png" alt="IEEE IIITD SB's logo")

			ul
				each item in navigation
					li
						a(
							href=item.link
							target=(item.external ? '_blank' : false)
							rel=(item.external ? 'noopener' : false)
							class=(active && item.name === active ? 'nav__link--active' : false)
						) !{item.name}
