@require "../../stylesheets/base"
@import "../../stylesheets/nav"
@import "../../stylesheets/footer"

body
	background-image: url("/assets/img/bg.jpg")
	background-attachment: fixed
	background-size: cover
	background-position: center
	background-repeat: no-repeat

main
	min-height: 100vh

section#head
	min-height: 70vh
	background: rgba(5, 0, 14, 0.9)
	padding: 50px 0
	display: flex
	align-items: center

	.content
		max-width: 1000px
		width: 90%
		min-height: 100%
		margin: 0 auto
		display: flex
		flex-direction: column
		justify-content: center
		color: white

		h1
			font-family: Manrope Extra Bold
			font-size: 52px
			color: var(--accent-color-1)
			margin: 0 -5px
			font-weight: normal
			line-height: 1.5

			span
				margin: 0 5px

			span::before
				content: ''
				position: absolute
				display: block
				bottom: -5px
				left: 0
				height: 10px
				width: 100%
				background: var(--accent-color-3)
				transition: 0.1s all linear
				animation-name: leftload
				animation-duration: 0.7s
				animation-timing-function: cubic-bezier(.55,.09,.68,.53)

			&:nth-child(2)
				&::before
					animation-delay: 0.5s

			&:nth-child(3)
				&::before
					animation-delay: 1s

		h2
			margin: 70px 0
			font-family: Manrope Bold
			font-size: 32px
			font-weight: normal

		p
			font-family: Manrope Medium
			font-size: 20px
			line-height: 1.7
			max-width: 650px
			padding: 10px
			border-radius: 5px
			background: alpha($accent-colors[2], 0.2)

section#cards
	background: white

	.gallery
		width: 100%
		max-width: 1400px
		overflow-x: auto
		display: flex
		margin: 0 auto
		padding: 10px 30px

		.card
			max-width: 430px
			min-width: 400px
			margin: 20px auto
			border-radius: 5px
			padding: 0 10px

			h1
				color: var(--accent-color-9)
				border-top-left-radius: 5px
				border-top-right-radius: 5px
				font-family: Manrope Extra Bold
				font-size: 28px
				margin-bottom: 20px
				font-weight: normal

			p
				font-size: 18px
				line-height: 1.6
				color: #222
				border-left: 5px solid var(--accent-color-0)
				padding-left: 10px

			&::after
				content: '';
				display: block;
				right: -15px;
				width: 15px;
				position: absolute;
				height: 1px;

	.hr
		height: 0px
		border-top: 5px dashed
		border-color: var(--accent-color-0)
		width: 90%
		max-width: 700px
		margin: 0 auto
		margin-top: 2vh

section#about-ieee,
section#about-us
	background: white
	padding: 5vh 0

	.content
		margin: 0 auto
		width: 90%
		max-width: 1000px

	h1
		font-size: 36px
		color: var(--accent-color-9)
		margin-bottom: 20px
		font-family: Manrope Extra Bold
		font-weight: normal

	p
		font-size: 22px
		line-height: 1.7
		padding: 10px 0
		color: #222

		.highlight
			background: rgba(243, 205, 0, 0.3)
			font-weight: bold

section#about-us
	background-image: url("/assets/img/bg-college.jpg")
	background-size: cover
	background-position: center
	background-repeat: no-repeat
	border-top: 5px solid var(--accent-color-1)
	position: relative

	.background
		position: absolute
		top: 0
		background: rgba(5, 0, 14, 0.8)
		width: 100%
		height: 100%

	h1
		color: var(--accent-color-1)

	p
		color: #eee

section#representatives
	background: white
	padding: 5vh 0
	border-top: 5px solid var(--accent-color-1)

	.content
		margin: 0 auto
		width: 90%
		max-width: 1000px

	h1
		font-size: 36px
		color: var(--accent-color-9)
		margin-bottom: 40px
		font-family: Manrope Extra Bold
		font-weight: normal

	.gallery
		display: flex
		flex-wrap: wrap
		justify-content: space-around
		justify-content: space-evenly
		margin: -20px auto
		width: 100%

		.card
			margin: 25px
			display: flex
			flex-direction: column
			align-items: center
			img
				height: 120px
				border-radius: 20%
				margin-bottom: 10px
			p
				line-height: 1.6
			p.name
				font-size: 20px
				font-family: Manrope Semibold
				color: var(--accent-color-9)
			p.role
				font-family: Manrope Bold
				font-size: 18px
				color: #222

section#sadda-hack
	background: #221a45
	padding: 5vh 0
	border-top: 5px solid var(--accent-color-1)

	.content
		margin: 0 auto
		width: 90%
		max-width: 1000px

	h1
		font-size: 36px
		color: #fff
		font-family: Manrope Extra Bold
		font-weight: normal
		text-align: center

	h2
		text-align: center
		font-size: 28px
		margin: 30px 0
		color: orange

	p, li
		color: #ddd
		font-size: 20px
		line-height: 1.7
		margin: 20px 0

	strong
		font-family: Manrope Extra Bold

	span.highlight
		background: #ffff003b

	p.queries
		font-size: 22px

	ul
		border-left: 5px solid alpha($accent-colors[0],0.1)

		li
			padding-left: 10px
			margin: 10px 0
			list-style-type: none

		a
			color: var(--accent-color-1)
			font-family: Manrope Bold
			border-bottom: 5px solid alpha($accent-colors[0],0.1)
			padding-bottom: 5px

@keyframes leftload
	from
		width: 0
	to
		width 100%