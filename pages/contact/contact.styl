@require "../../stylesheets/base"
@import "../../stylesheets/nav"
@import "../../stylesheets/footer"

main
	min-height: 100vh

section
	min-height: 70vh
	padding: 5vh 0

	.content
		margin: 0 auto
		width: 90%
		max-width: 1000px

	h1
		font-size: 36px
		color: var(--accent-color-9)
		font-family: Manrope Extra Bold
		font-weight: normal
		border-bottom: 5px solid var(--accent-color-1)
		margin-bottom: 50px

	h2
		font-size: 28px
		color: var(--accent-color-7)
		font-family: Manrope Semibold
		font-weight: normal
		margin: 20px 0

	.map-wrap
		width: 100%
		height: 500px

		iframe
			width: 100%
			height: 100%

	.detail
		margin: 30px 0
		line-height: 1.5
		h3
			font-size: 22px
			color: var(--accent-color-6)
			margin: 5px 0
			font-family: Manrope Bold
		h4
			font-size: 20px
			color: #222
			margin: 5px 0
			font-family: Manrope Semibold
		p
			font-size: 18px
			color: #333
			margin: 5px 0

	form
		display: flex
		flex-wrap: wrap
		width: 100%
		margin: -20px
		padding-bottom: 5vh

		> div
			flex: 1
			width: 100%
			min-width: 300px
			display: flex
			flex-direction: column
			margin: 20px
			justify-content: space-between

		label
			font-size: 20px
			font-weight: 500
			color: #444
			margin-top: 20px

		input, textarea
			border: 3px solid var(--accent-color-0)
			margin: 5px 0
			padding: 10px
			font-size: 16px
			border-radius: 3px
			font-family: var(--default-font-stack)
			transition: border-color .1s, box-shadow .1s
			color: #222
			line-height: 1.5

			&[type="submit"]
				width: 200px
				color: var(--accent-color-5)
				background: var(--accent-color-0)
				cursor: pointer
				margin-top: 20px
				font-weight: 500

			&[type="email"]
				font-family: var(--mono-font-stack)

			&:active, &:focus
				border-color: var(--accent-color-2)
				outline: none

			&:hover
				box-shadow: 0 0 10px var(--accent-color-0)

		textarea
			resize: vertical
			height: 150px

.hr
	height: 0px
	border-top: 5px dashed
	border-color: var(--accent-color-0)
	width: 90%
	max-width: 700px
	margin: 4vh auto
